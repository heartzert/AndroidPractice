<?xml version="1.0" encoding="utf-8"?>
<!--可以自动转圈的loading-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <!--            android:drawable=""-->
        <rotate
            android:fromDegrees="0.0"
            android:pivotX="50.0%"
            android:pivotY="50.0%"
            android:toDegrees="1000.0" />

        <span style="white-space:pre" />    <!-- 其中360.0值越大，转的圈圈越快 -->
    </item>

</layer-list>