<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动滑动无障碍服务"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#CCCCCC" />

        <!-- 无障碍服务状态 -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="服务状态：未启用"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_open_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="打开无障碍设置" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#CCCCCC" />

        <!-- 悬浮窗状态 -->
        <TextView
            android:id="@+id/tv_floating_window_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="悬浮窗权限：未授权"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_open_floating_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启悬浮窗" />

            <Button
                android:id="@+id/btn_close_floating_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="关闭悬浮窗" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#CCCCCC" />

        <!-- 滑动控制状态 -->
        <TextView
            android:id="@+id/tv_swipe_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="滑动状态：未运行"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_stop_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#FFC107"
            android:text="停止滑动" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#CCCCCC" />

        <!-- 配置按钮 -->
        <Button
            android:id="@+id/btn_open_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开配置页面" />

        <!-- 使用说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="start"
            android:text="使用说明：\n\n1️⃣ 开启无障碍服务\n   • 点击『打开无障碍设置』\n   • 找到『Auto Swipe Service』\n   • 开启该服务\n\n2️⃣ 开启悬浮窗控制\n   • 点击『开启悬浮窗控制』\n   • 授予悬浮窗权限\n   • 屏幕上会出现控制按钮\n\n3️⃣ 使用悬浮窗\n   • 点击悬浮窗可开关滑动功能\n   • 点击设置图标可配置参数\n   • 长按可拖动悬浮窗位置\n\n4️⃣ 配置参数\n   • 滑动间隔：1-3秒随机\n   • 起始位置：屏幕中心100dp内随机\n   • 滑动距离：5-20dp随机\n   • 滑动时长：0.3-0.6秒随机\n   • 所有参数可自定义调整"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
